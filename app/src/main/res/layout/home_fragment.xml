<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
android:id="@+id/tity"
        android:layout_height="56dp" />
<androidx.core.widget.NestedScrollView
    android:layout_below="@+id/tity"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
android:id="@+id/Book_an_appointment_in_few_steps"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/amaranth"
        android:text="Book an Appointment in few steps"
        android:textColor="@color/black"

        android:textSize="20dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/rr"
            android:gravity="center"
            android:layout_below="@+id/Book_an_appointment_in_few_steps">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/book_appointment"
        android:background="@layout/rounded_border"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:gravity="center"
        android:padding="8dp"
        android:text="Book Appointment"
        android:textColor="#ffffff"
        android:elevation="10dp"
        android:textSize="15sp" />
        </RelativeLayout>
<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/recycler_view"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        android:scrollbars="none"-->
<!--        android:layout_below="@id/rr" />-->
    <RelativeLayout
        android:layout_below="@+id/rr"
        android:layout_width="match_parent"
android:layout_marginTop="0dp"
        android:id="@+id/rr2"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="34dp"
            android:id="@+id/schedule"
            android:layout_height="46dp"
            android:foregroundGravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/schedule" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:id="@+id/appointment"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/schedule"
            android:fontFamily="@font/amaranth"
            android:gravity="center"
            android:text="My Appointments"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ViewAll"
            android:textSize="15dp"
            android:id="@+id/viewall"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
          />

        <View
            android:layout_width="match_parent"
            android:layout_alignBottom="@+id/appointment"
            android:layout_marginBottom="0dp"
            android:id="@+id/vvv"
            android:layout_height="1dp"
            android:background="@color/grey"/>

<!--        <ImageView-->
<!--            android:layout_width="40dp"-->
<!--            android:id="@+id/book_no_appointment"-->
<!--            android:layout_height="40dp"-->
<!--            android:src="@drawable/ic_library_books_black_24dp"-->
